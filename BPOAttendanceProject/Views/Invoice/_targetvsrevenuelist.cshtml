@model BPOAttendanceProject.Models.InvoiceModel

@if (Model.InvoiceModelList != null)
 {

     if (Model.InvoiceModelList.Count > 0)
            { 
         <div class="portlet box grey">
   <div class="portlet-title">      
   <div class="caption">@ViewBag.Daylist</div>
    </div>
       </div>                                   
                                                   
 
  <table id="tbldisplay" style="width:100%;border: 1px solid black;padding: 5px;">
        <tr>
        <th style="border: 1px solid black;padding: 5px;background-color:#E5E5E5">Month</th>
        <th style="border: 1px solid black;padding: 5px;background-color:#E5E5E5">Target Revenue</th>
        <th style="border: 1px solid black;padding: 5px;background-color:#E5E5E5">Actual Revenue </th>
        <th style="border: 1px solid black;padding: 5px;background-color:#E5E5E5">% Revenue Achievement</th>
       
        </tr>
        <tbody>
                  @foreach (var item in Model.InvoiceModelList)
                  { 
                       
                     <tr>
                      <td style="border: 1px solid black;padding: 5px;text-align:left;">@item.MonthName</td>
                      <td style="border: 1px solid black;padding: 5px;text-align:right;">@item.Target.ToString("#,##0")</td>
                      <td style="border: 1px solid black;padding: 5px;text-align:right;">@item.Actual.ToString("#,##0")</td>
                      <td style="border: 1px solid black;padding: 5px;text-align:right;">@Math.Round(item.Achievement)%</td>
                       
                    
                     </tr>
                  }
         
               @if (Model.InvoiceModelList.Count > 0)
               {
                 <tr><td style="border: 1px solid black;padding: 5px;font-weight: bold;">TOTAL</td><td style="border: 1px solid black;padding: 5px;font-weight: bold;text-align:right">@String.Format( "{0:#,##0.##}", Math.Round(Model.InvoiceModelList.Sum(e => e.Target)) ) </td><td style="border: 1px solid black;padding: 5px;font-weight: bold;text-align:right">@String.Format( "{0:#,##0.##}",Math.Round( Model.InvoiceModelList.Sum(e => e.Actual)) )</td><td style="border: 1px solid black;padding: 5px;font-weight: bold;text-align:right">@(Math.Round(Model.InvoiceModelList.Sum(e => e.Actual) / Model.InvoiceModelList.Sum(e => e.Target) * 100, 0))%</td></tr>
                }
             

                </tbody>         
                  
                 
   </table>
    
 }
 
   else
                         {
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="alert alert-info">
                                                        <strong>No Records Found</strong><br />
                                                    </div>
                                                </div>
                                            </div>
                         }
  }

 
 
<script type="text/javascript">
  
   



</script>
