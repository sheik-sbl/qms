@*<html>*@

@model BPOAttendanceProject.Models.PasswordModel
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

@using (Ajax.BeginForm("SaveChangepassword", "Account", new { @id = "form" }, new AjaxOptions { OnSuccess = " OnSuccessChangePassword(data)", OnFailure = "OnFailureChangePassword()" }))
{     
    <form id="form">
    <div>
        <h3 class="form-title">Change Password</h3>

        <div class="form-group">
            <label class="control-label">Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>

                @Html.TextBoxFor(model => model.OldPassword, new { @id = "oldPassword", @name = "oldPassword", @class = "form-control placeholder-no-fix", @placeholder = "Password", @autocomplete = "off", style = "width: 350px", @required = "required", @type = "Password" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Confirm Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                @Html.TextBoxFor(model => model.NewPassword, new { @id = "newPassword", @name = "newPassword", @class = "form-control placeholder-no-fix", @placeholder = "New Password", @autocomplete = "off", style = "width: 350px", @required = "required", @type = "Password" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Retype Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                @Html.TextBoxFor(model => model.ConfirmPassword, new { @id = "ConfirmPassword", @name = "ConfirmPassword", @class = "form-control placeholder-no-fix", @placeholder = "New Password", @autocomplete = "off", style = "width: 350px", @required = "required", @type = "Password" })

            </div>
        </div>
        <div class="form-group">

            <button type="submit" class="btn green pull-left"  onclick="return Validate()";>Change Password </button>
        </div>
    </div>
    </form>
}




