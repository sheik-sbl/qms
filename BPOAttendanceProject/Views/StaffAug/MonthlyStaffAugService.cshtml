    function GetMRMPopup(_ID) {
       
       
        var pathurl = '@Url.Action("GetStaffAugService", "StaffAug")';
        $.ajax({
            url: pathurl,
            type: 'GET',
            data: {
                ID: _ID
            },
            success: function (data) {
               
                $("#tarform").html("");
                $("#tarform").html(data);
                $("#tarform").modal({                    // wire up the actual modal functionality and show the dialog
