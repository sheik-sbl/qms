                        ActualINR: 'Actual INR',
                        Percent: 'Percent',
                        Backlog:'Backlog'
                       

                    },
                   
                    keys: {
                        //                x: 'name', // it's possible to specify 'x' when category axis
                        value: ['BudgetINR', 'ActualINR', 'Percent', 'Backlog'],
                    }
                },
