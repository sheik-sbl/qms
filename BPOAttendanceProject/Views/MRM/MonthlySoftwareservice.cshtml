    function Filltarget() {
        var month = $("#drpMonth option:selected").text();
        var year = $("#drpYear option:selected").text();


        var pathurl = '@Url.Action("FillTargetMonthly", "MRM")';
        $.ajax({
            url: pathurl,
            type: 'GET',
            data: {
                month: month,
                year: year

            },
            success: function (data) {

                $('#txtbudgetinr').val(data.budgeINR);
            }
        });
    }


