
@model  BPOAttendanceProject.Models.DailyTeamView    

@if (Model.LstDailyTeamReport.Count > 0)
{
    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="tblPreprocess">
        <thead>
            <tr>
                <th style="width:5%">PSN </th>
                <th style="width:20%">Name </th>
                <th style="width:5%">Attendance </th>
                <th style="width:5%">Project</th>
                <th style="width:5%">Total Target</th>
                <th style="width:5%">Total Production</th>
                <th style="width:5%">Total Hours</th>
                <th style="width:5%">Character Count</th>
                <th style="width:5%">Avg Records/Hr</th>
                <th style="width:5%">Avg Character/Hr</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LstDailyTeamReport)
            {
                if (@item.totalproduction != 0)
                {
                    if (@Model.Summaryinfo.Averagerecordshour > (@item.totalproduction / @item.totalhours))
                    {
                          <tr class="odd gradeX" style="color:red">
                            <td>@item.psn</td>
                            <td>@item.name</td>
                            <td>@item.attendance</td>
                            <td>@item.project</td>
                            <td>@item.totaltarget</td>
                            <td>@item.totalproduction</td>
                            <td>@item.totalhours</td>
                            <td>@item.Charactercount</td>
                            <td>@(item.totalproduction/item.totalhours)</td>
                            <td>@(item.Charactercount/item.totalhours)</td>

                        </tr>
                    }

                    else
                    {
                         <tr class="odd gradeX" style="color:green">
                            <td>@item.psn</td>
                            <td>@item.name</td>
                            <td>@item.attendance</td>
                            <td>@item.project</td>
                            <td>@item.totaltarget</td>
                            <td>@item.totalproduction</td>
                            <td>@item.totalhours</td>
                            <td>@item.Charactercount</td>
                            <td>@(item.totalproduction/item.totalhours)</td>
                            <td>@(item.Charactercount/item.totalhours)</td>
                        </tr> 
                    }
                }

                else
                {
                   
                    <tr class="odd gradeX" style="color:brown">
                            <td>@item.psn</td>
                            <td>@item.name</td>
                            <td>@item.attendance</td>
                            <td>@item.project</td>
                            <td>@item.totaltarget</td>
                            <td>@item.totalproduction</td>
                            <td>@item.totalhours</td>
                            <td>@item.Charactercount</td>
                            <td>0</td>
                            <td>0</td>
                        </tr>
                   
                }

            }

        </tbody>
    </table>@*
    
    <table>
        <tr><td>Total associates worked :</td> <td>@Model.Summaryinfo.Totalassociatesworked</td><td>Total Associate hours:</td><td>@Model.Summaryinfo.Totalassociatehours</td></tr>
        <tr><td>Total records processed :</td><td>@Model.Summaryinfo.Totalrecordsprocessed</td><td>Total characters delivered:</td><td>@Model.Summaryinfo.Totalcharactersdelivered</td></tr>
        <tr><td>Average records/hour :</td><td>@Model.Summaryinfo.Averagerecordshour</td><td>Average characters delivered per hour:</td><td>@Model.Summaryinfo.Averagecharactersdelivered</td></tr>
       
    </table>*@
    
   <table style="width:50%">
  <tr>
    <td>Total Associates worked:</td>
    <td>@Model.Summaryinfo.Totalassociatesworked</td> 
    <td>Total Associate hours:</td>
    <td>@Model.Summaryinfo.Totalassociatehours</td>
  </tr>
  <tr>
    <td>Total records processed:</td>
    <td>@Model.Summaryinfo.Totalrecordsprocessed</td>
    <td>Total characters delivered:</td>
    <td>@Model.Summaryinfo.Totalcharactersdelivered</td>
  </tr>
  <tr>
    <td>Average records/hour:</td>
    <td>@Model.Summaryinfo.Averagerecordshour</td>
    <td>Average characters delivered per hour:</td>
    <td>@Model.Summaryinfo.Averagecharactersdelivered</td>
  </tr>
 
</table>
    
}
else
{
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-info">
                <strong>No Daily Production Found on this date</strong><br />
            </div>
        </div>
    </div>
}


