
@model BPOAttendanceProject.Models.ReasonModel

<div>
    @using (Html.BeginForm("SaveReasonEntry", "Admin", FormMethod.Post, new { @classs = "userform", @id = "form" }))
    {
        <div class="modal-content">

            <div class="modal-body">
                <div>
                    <div>
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">
                         
                            <div class="portlet-body form">
                                <div class="form-horizontal">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label">Date</label>
                                                    <div class="col-md-9 valid-group">
                                                 <div class="input-group date date-picker" data-date-format="dd/mm/yyyy">

                                                        @Html.TextBoxFor(model => model.date, new { @class = "form-control", @placeholder = " Date", @autocomplete = "off", @required = "true",@id="datepicker" })
                                                        <span class="input-group-addon" id="spandate">
                                                            <i class="fa fa-calendar"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                </div>

                                         <div class="form-group">
                                            <label class="col-md-3 control-label">Location</label>
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                
                                                            @Html.DropDownListFor(m => m.id, new SelectList(new List<SelectListItem> { 
                                                                                                         new SelectListItem { Text = "MNS", Value = "4"}, 
                                                                                                         new SelectListItem { Text = "MQC", Value = "3"}, 
                                                                                                         new SelectListItem { Text = "MDS", Value = "2"}, 
                                                                                                         new SelectListItem { Text = "TVM", Value = "1"},                   
                                                                                                         new SelectListItem { Text = "KNPY", Value = "0"}
                                                                                                     }, "Value", "Text"), "Select",new {style = "width: 100%;", @required = "required", @class = "btn dropdown-toggle btn-default", @autocomplete = "off", @id = "drpLocation"  })


                                                     </div>
                                            </div>
                                        </div>
                                            


                                           <div class="form-group">
                                            <label class="col-md-3 control-label">Description</label>
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                    @Html.TextAreaFor(model => model.Remarks, new { @style = "Height:100px", @id = "txtRoleName", @class = "form-control", @placeholder = "Description", @autocomplete = "off" })
                                                </div>
                                            </div>
                                        </div>
                                            
                                            
                                                
                                                
                                                
                                                
                                                
                                                
                                                </div>
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END SAMPLE FORM PORTLET-->
                    </div>

                </div>
            </div>
            <div class="modal-footer">


               
                <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn green">Save</button>
            </div>
          </div>
    }
   </div>

   
    <!-- END EXAMPLE TABLE PORTLET-->

<script type="text/javascript">
    $('.date-picker').datepicker({
        format: 'dd/mm/yyyy',
        //startDate: '-1d',
        autoclose: true
    });


    function DailyPrintReport() {
      
        var pathurl = '@Url.Action("DailyPrintReport", "Admin")';
         $.ajax({
             url: pathurl,
             type: 'GET',
             data: {
                 date: $('#Date').val(),
                 LocationId: $("#drpLocation option:selected").text()
             },
             success: function (data) {
                
                 
             }
         });
     }


    function DailylocationwiseProductionReport() {

        $("#wait").css("display", "block");
        var pathurl = '@Url.Action("DailylocationwiseProductionReport", "Admin")';
        $.ajax({
            url: pathurl,
            type: 'GET',
            data: {
                date: $('#Date').val(),
                LocationId: $("#drpLocation option:selected").text()
            },
            success: function (data) {
                $("#wait").css("display", "none");
                $("#reportlist").html(data);
            }
        });
    }


    

    function DailyconsolidatedProductionReport() {

        $("#wait").css("display", "block");
        var pathurl = '@Url.Action("DailyconsolidatedProductionReport", "Admin")';
        $.ajax({
            url: pathurl,
            type: 'GET',
            data: {
                date: $('#Date').val(),
                LocationId: $("#drpLocation option:selected").text()
            },
            success: function (data) {
                $("#wait").css("display", "none");
                $("#reportlist").html(data);
            }
        });
    }
   

</script>






















