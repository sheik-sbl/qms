<script>
   
    


   



    jQuery(document).ready(function () {
        setTimeout(function () {
            $("#MsgDiv").slideUp(400);
        }, 2000);
        $('#divPhotolistpop').css('width', '55%');
    });


    function Cancel() {

        $('#drpLocation').get(0).selectedIndex = 0;
        $('#drpproject').get(0).selectedIndex = 0;
        $('#drpclient').get(0).selectedIndex = 0;
        $('#drpevent').get(0).selectedIndex = 0;




    }


    function DateCheck() {
        var StartDate = document.getElementById('txtStartDate').value;
        var EndDate = document.getElementById('txtEndDate').value;
        var eDate = new Date(EndDate);
        var sDate = new Date(StartDate);
        if (StartDate != '' && StartDate != '' && sDate > eDate) {
            alert("Please ensure that the End Date is greater than or equal to the Start Date.");
            return false;
        }
    }




    function ProductivityReport() {
        var startDate = new Date($('#startdate').val());
        var endDate = new Date($('#enddate').val());
       
        if ($('#startdate').val() == "" && $('#enddate').val() == "") {
            alert("Please select start date and end date!");
        }
       
        else if (startDate != '' && startDate != '' && startDate > endDate) 
        {
            alert("Please ensure that the End Date is greater than or equal to the Start Date.");
           
        }
        else
        {

            $("#wait").css("display", "block");
            var pathurl = '@Url.Action("PromotionDetailsReport", "Admin")';
            $.ajax({
                url: pathurl,
                type: 'GET',
                data: {

                    Location: $("#drpLocation option:selected").text(),
                    projectcode: $("#drpproject option:selected").text(),
                    sdate: $('#startdate').val(),
                    enddate: $('#enddate').val(),
                    clientcode: $("#drpclient option:selected").text(),
                    eventcode: $("#drpevent option:selected").text()


                },
                cache: false,
                success: function (data) {
                    $("#wait").css("display", "none");
                    $("#reportlist").html("");
                    $("#reportlist").html(data);

                }
            });
        
       
        }
     }


   
    

    

   

    

    


</script>
 