<link href="../assets/global/plugins/bootstrap-sweetalert/sweetalert.css" rel="stylesheet" />
<link href="../assets/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="../assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

@model BPOAttendanceProject.Models.NewEmployee

<div>
    @using (Html.BeginForm("SaveNewEmployee", "Admin", FormMethod.Post, new { @classs = "userform", @id = "form" }))
    {
        <div class="modal-content">
            <div class="modal-body">
                <div>
                    <div>
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">
                            <div class="m-heading-1 border-green m-bordered">
                                <div class="caption">
                                    <i class="fa fa-edit"></i>
                                  
                                      @if (Model.Id == 0)
                                    {
                                    <span class="caption-subject font-dark sbold uppercase">Add Employee</span>
                                    }
                                    else
                                    {
                                        <span class="caption-subject font-dark sbold uppercase">Edit Employee2q</span>
                                    }


                                </div>
                            </div>
                            <div class="portlet-body form">
                                <div class="form-horizontal">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-6">

                                                <div class="form-group">
                                                    @Html.HiddenFor(model => model.Id, new { @Id = "Id" })
                                                    <label class="col-md-3 control-label">PSN</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span id="errmsg" class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>
                                                            @Html.TextBoxFor(model => model.PSN, new { onchange = "CheckAccessAlreadyExist(this)", @id = "txtusername", @class = "form-control", @placeholder = "User Name", @autocomplete = "off", @required = "required",@maxlength="20" })

                                                        </div>


                                                    </div>
                                                </div>
                                               


                                                <div class="form-group">
                                                    <label class="col-md-3 control-label">Associate Name</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>
                                                            @Html.TextBoxFor(model => model.Associatename, new { @id = "txtFirstname", @class = "form-control", @placeholder = " Name", @autocomplete = "off", @required = "required",@maxlength="50" })

                                                        </div>


                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-md-3 control-label">Date of Joining</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>
                                                            @Html.TextBoxFor(model => model.DOJ, new { @id = "txtLastname", @class = "form-control", @placeholder = "Joining Date ", @autocomplete = "off", @required = "required",@maxlength="50" })

                                                        </div>


                                                    </div>
                                                </div>
                                              

                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END SAMPLE FORM PORTLET-->
                    </div>

                </div>
            </div>
            <div class="modal-footer">


                <div class="md-checkbox" style="position: absolute">
                    @Html.CheckBoxFor(model => model.IsActive, new { @id = "chkActive", @checked = "true", @class = "md-check", @autocomplete = "off" })
                    <label for="chkActive">
                        <span class="inc"></span>
                        <span class="check"></span>
                        <span class="box"></span>IsActive
                    </label>
                </div>
                <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn green">Save</button>
            </div>
        </div>
    }
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->





<!-- BEGIN PAGE LEVEL PLUGINS -->
<script src="../assets/global/plugins/bootstrap-sweetalert/sweetalert.js"></script>
<script src="../assets/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->

<!-- BEGIN PAGE LEVEL SCRIPTS -->
<script src="../assets/pages/scripts/ui-extended-modals.min.js" type="text/javascript"></script>
<!-- END PAGE LEVEL SCRIPTS -->

<script type="text/javascript">
  



    function CheckAccessAlreadyExist(object) {
     
        var Value = $("#txtusername").val();
        if (Value.length > 0) {
            var pathurl = '@Url.Action("CheckStringWithOneColumn", "Admin")';
            $.ajax({
                url: pathurl,
                type: 'POST',
                data: {ActualValue: Value },
                success: function (data) {
                    if (data == "true") {
                        alert("UserName  already exist !");
                        $(object).val("");
                        $(object).focus();
                    }
                }
            });
        }
    }

    
    



</script>
