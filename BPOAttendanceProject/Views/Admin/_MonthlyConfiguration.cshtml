@{
   
}
<link href="../assets/global/plugins/bootstrap-sweetalert/sweetalert.css" rel="stylesheet" />
<link href="../assets/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="../assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

@model BPOAttendanceProject.Models.MonthlyConfiguration

<div>
    @using (Html.BeginForm("SaveMonthlyConfiguration", "Admin", FormMethod.Post, new { @classs = "userform", @id = "form" }))
    {
        <div class="modal-content">
            <div class="modal-body">
                <div>
                    <div>
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">
                            <div class="m-heading-1 border-green m-bordered">
                                <div class="caption">
                                    <i class="fa fa-edit"></i>
                                  
                                      @if (Model.Id == 0)
                                    {
                                    <span class="caption-subject font-dark sbold uppercase">Add monthly Configuration</span>
                                    }
                                    else
                                    {
                                        <span class="caption-subject font-dark sbold uppercase">Edit Monthly Configuration</span>
                                    }


                                </div>
                            </div>
                            <div class="portlet-body form">
                                <div class="form-horizontal">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-6">

                                                <div class="form-group">
                                                    @Html.HiddenFor(model => model.Id, new { @Id = "Id" })
                                                    <label class="col-md-3 control-label">Month</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>

                                                             @Html.DropDownListFor(m => m.monthid , new SelectList(new List<SelectListItem> { 
                                                                                                         new SelectListItem { Text = "January", Value = "1"}, 
                                                                                                         new SelectListItem { Text = "February", Value = "2"}, 
                                                                                                         new SelectListItem { Text = "March", Value = "3"}, 
                                                                                                         new SelectListItem { Text = "April", Value = "4"},                   
                                                                                                         new SelectListItem { Text = "May", Value = "5"},
                                                                                                         new SelectListItem { Text = "June", Value = "6"}, 
                                                                                                         new SelectListItem { Text = "July", Value = "7"}, 
                                                                                                         new SelectListItem { Text = "August", Value = "8"}, 
                                                                                                         new SelectListItem { Text = "September", Value = "9"},                   
                                                                                                         new SelectListItem { Text = "October", Value = "10"},
                                                                                                         new SelectListItem { Text = "November", Value = "11"},
                                                                                                         new SelectListItem { Text = "December", Value = "12"}
                                                                                                     }, "Value", "Text"), "Select",new {style = "width: 100%;", @required = "required", @class = "btn dropdown-toggle btn-default", @autocomplete = "off", @id = "drpMonth"  })

                                                        </div>


                                                    </div>
                                                </div>
                                               
                                                 <div class="form-group">
                                                   
                                                    <label class="col-md-3 control-label">Year</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>

                                                             @Html.DropDownListFor(model => model.year , new SelectList(new List<SelectListItem> { 
                                                                                                         new SelectListItem { Text = "2019", Value = "2019"}, 
                                                                                                         new SelectListItem { Text = "2020", Value = "2020"}, 
                                                                                                          new SelectListItem { Text = "2021", Value = "2021"}, 
                                                                                                         new SelectListItem { Text = "2022", Value = "2022"},                    
                                                                                                         new SelectListItem { Text = "2023", Value = "2023"}, 
                                                                                                         new SelectListItem { Text = "2024", Value = "2024"}, 
                                                                                                          new SelectListItem { Text = "2025", Value = "2025"}, 
                                                                                                         new SelectListItem { Text = "2026", Value = "2026"}, 
                                                                                                       new SelectListItem { Text = "2027", Value = "2027"}, 
                                                                                                         new SelectListItem { Text = "2028", Value = "2028"}, 
                                                                                                          new SelectListItem { Text = "2029", Value = "2029"}, 
                                                                                                         new SelectListItem { Text = "2030", Value = "2030"},
                                                                                                     }, "Value", "Text"), "Select",new {style = "width: 100%;", @required = "required", @class = "btn dropdown-toggle btn-default", @autocomplete = "off", @id = "drpMonth"  })

                                                        </div>


                                                    </div>
                                                </div> 
                                                     <div class="form-group">
                                                    <label class="col-md-3 control-label">Location</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>
                                                        
                                                            @Html.DropDownListFor(m => m.locationId , new SelectList(new List<SelectListItem> { 
                                                                                                         new SelectListItem { Text = "KAKKANAD", Value = "6"},
                                                                                                         new SelectListItem { Text = "MNS", Value = "5"}, 
                                                                                                         new SelectListItem { Text = "MQC", Value = "4"}, 
                                                                                                         new SelectListItem { Text = "MDS", Value = "3"}, 
                                                                                                         new SelectListItem { Text = "TVM", Value = "2"},                   
                                                                                                         new SelectListItem { Text = "KNPY", Value = "1"}
                                                                                                     }, "Value", "Text"), "Select",new {style = "width: 100%;", @required = "required", @class = "btn dropdown-toggle btn-default", @autocomplete = "off", @id = "drpLocation"  })



                                                        </div>


                                                    </div>
                                                </div>

                                              

                                                <div class="form-group">
                                                    <label class="col-md-3 control-label">Configuration Value</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>
                                                            @Html.TextBoxFor(model => model.Configuration, new { @id = "txtconfiguration", @class = "form-control", @placeholder = "Configuration", @autocomplete = "off", @required = "required",@maxlength="50" })

                                                        </div>


                                                    </div>
                                                </div>


                                                <div class="form-group">
                                                    <label class="col-md-3 control-label">Monthly Target</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>
                                                            @Html.TextBoxFor(model => model.Revenueconfiguration, new { @id = "txttarget", @class = "form-control", @placeholder = "Target", @autocomplete = "off", @required = "required",@maxlength="50" })

                                                        </div>


                                                    </div>
                                                </div>


                                                 <div class="form-group">
                                                    <label class="col-md-3 control-label">working days</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-envelope"></i>
                                                            </span>
                                                            @Html.TextBoxFor(model => model.workingdays, new { @id = "txtworkingday", @class = "form-control", @placeholder = "Configuration", @autocomplete = "off", @required = "required",@maxlength="50" })
                                                            
                                                        </div>


                                                    </div>
                                                </div>


                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END SAMPLE FORM PORTLET-->
                    </div>

                </div>
            </div>
            <div class="modal-footer">


               
                <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn green">Save</button>
            </div>
        </div>
    }
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->





