                                            </li>
                                           
                                        </ul>
                                    </div>*@
                                </td>

                                 <td>
                                    <div class="btn-group">
                                        @* <button  class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false"   onclick="location.href='@Url.Action("DownloadExcelSheettt", "Admin",new { id = @item.Id })'" }>
                                          View  Report
