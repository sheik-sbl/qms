        function successFunc(jsondata) {
          
            var chart = c3.generate({
                bindto: '#Barchart',
                data: {
                    json: jsondata,
                    type: 'bar',
                    labels: true,
                    labels: {
                        //            format: function (v, id, i, j) { return "Default Format"; },
                        format: {
                            BudgetINR: d3.format(','),
                            ActualINR: d3.format(','),
                            Percent: d3.format(','),
                            Backlog: d3.format(','),
                            
                            //                data1: function (v, id, i, j) { return "Format for data1"; },
                        }
